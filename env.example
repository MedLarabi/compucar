# Email Configuration for CompuCar
# For development: Leave SMTP settings empty to use Ethereal Email (test email service)
# For production: Add your real SMTP credentials

# Hostinger Email Configuration (Recommended)
# Create email accounts in Hostinger control panel first
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@compucar.pro
SMTP_PASS=your-hostinger-email-password

# Alternative SMTP Settings (if not using Hostinger)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Email From Settings
FROM_EMAIL=noreply@compucar.pro
FROM_NAME=CompuCar File Tuning

# Admin Email for Notifications
ADMIN_EMAIL=admin@compucar.pro

# Enable/Disable Email Notifications
EMAIL_ENABLED=true

# Telegram Multi-Bot Configuration
# Enable/disable Telegram bots
TELEGRAM_ENABLED=false

# Super Admin Bot (Full system control)
TELEGRAM_SUPER_ADMIN_BOT_TOKEN=
TELEGRAM_SUPER_ADMIN_CHAT_ID=
TELEGRAM_SUPER_ADMIN_ENABLED=false

# File Admin Bot (File tuning system only)
TELEGRAM_FILE_ADMIN_BOT_TOKEN=
TELEGRAM_FILE_ADMIN_CHAT_ID=
TELEGRAM_FILE_ADMIN_ENABLED=false

# Customer Bot (Notifications only)
TELEGRAM_CUSTOMER_BOT_TOKEN=
TELEGRAM_CUSTOMER_BOT_ENABLED=false

# Legacy single bot configuration (for backward compatibility)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Production SMTP Examples:
# Resend: smtp.resend.com:587
# Gmail: smtp.gmail.com:587
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database
DATABASE_URL="your-database-url"

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-account-id
R2_BUCKET=your-bucket-name
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_REGION=auto
R2_PUBLIC_URL=https://your-custom-domain.com

# File Upload Settings
PRESIGNED_URL_EXPIRES=900
MAX_UPLOAD_MB=200
# ALLOWED_FILE_TYPES=* # All file types are now allowed - this setting is deprecated

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_NAME=CompuCar File Tuning
FROM_EMAIL=noreply@compucar.com

# Admin Email for Notifications
ADMIN_EMAIL=admin@compucar.com

